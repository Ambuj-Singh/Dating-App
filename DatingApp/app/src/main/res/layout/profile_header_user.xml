<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_bg">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:elevation="8dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginTop="80dp"
            app:cardCornerRadius="250dp">
            <ImageView
                android:id="@+id/gender_display_user"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_cancel_24"
                android:padding="8dp" />

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/PinkDark"
            android:elevation="8dp"
            app:cardCornerRadius="250dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/profile_display_user"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:layout_margin="2dp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="edit_profile_pic"
                    android:padding="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_camera_alt_24_alpha"
                    app:tint="@color/white" />

            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/display_full_name_user"
            style="@style/title_social"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:padding="10dp"
            android:text="@string/dev_name"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/display_name_user"
            style="@style/title_social"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="175dp"
            android:padding="4dp"
            android:text="@string/dev_name"
            android:textColor="@color/colorAccent" />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="8dp"
            app:cardCornerRadius="255dp">

            <TextView
                android:id="@+id/age_display_user"
                style="@style/title_social"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:text="23y"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profile_user_back"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="220dp"
        app:backgroundTint="@color/PinkDark"
        app:srcCompat="@drawable/ic_baseline_chevron_left_24"
        app:tint="@color/white"
        />

</FrameLayout>