<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    tools:context=".user.Profile_Frags.ProfilePicUpload">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            style="@style/title_social"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/profile_pic"
            android:textColor="@color/BlueTone"
            android:textSize="15sp"
            android:layout_marginTop="16dp"
            android:textAlignment="center" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp">

            <ProgressBar
                android:id="@+id/linearPb_dialog"
                style="@style/validating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/checked_dialog"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_check_black_24dp" />

            <Button
                android:id="@+id/upload_dialog"
                style="@style/colored_custom_butt_transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/upload"
                android:textAllCaps="true"
                android:textAppearance="@style/title_social"
                android:textColor="@color/colorPrimary" />
        </RelativeLayout>






    </LinearLayout>

</FrameLayout>