<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/attachment_background"
    >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical">

                    <ImageButton android:id="@+id/attach_files"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        style="?attr/borderlessButtonStyle"
                        android:padding="8dp"
                        android:src="@drawable/ic_baseline_files_24" />

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/title_social"
                        android:text="Files"
                        android:textColor="@color/white"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/open_camera"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        style="?attr/borderlessButtonStyle"
                        android:padding="8dp"
                        android:src="@drawable/ic_baseline_camera_24" />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/title_social"
                        android:text="Camera"
                        android:textColor="@color/white"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="25dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/attach_from_gallery"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        style="?attr/borderlessButtonStyle"
                        android:padding="8dp"
                        android:src="@drawable/ic_baseline_insert_photo_24" />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/title_social"
                        android:text="Gallery"
                        android:textColor="@color/white"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/attach_audio"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        style="?attr/borderlessButtonStyle"
                        android:padding="8dp"
                        android:src="@drawable/ic_baseline_headset_24" />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/title_social"
                        android:text="Audio"
                        android:textColor="@color/white"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/attach_my_location"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        style="?attr/borderlessButtonStyle"
                        android:padding="8dp"
                        android:src="@drawable/ic_baseline_my_location_24" />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/title_social"
                        android:text="Location"
                        android:textColor="@color/white"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="25dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/attach_contact"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        style="?attr/borderlessButtonStyle"
                        android:padding="8dp"
                        android:src="@drawable/ic_baseline_person_24" />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/title_social"
                        android:text="Contact"
                        android:textColor="@color/white"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


</FrameLayout>