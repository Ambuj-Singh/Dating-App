<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:background="@drawable/sent"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:padding="1dp">


            <!-- Media -->
            <ImageView
                android:id="@+id/sent_image"
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:padding="8dp"
                android:visibility="gone"
                android:scaleType="centerCrop"
                />


        <!-- Buttons -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:padding="6dp">

            <!-- Title, secondary and supporting text -->
            <TextView
                android:id="@+id/message_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                android:maxWidth="250dp"
                android:text="jadwjawddwawdafsfssefseffessefsefsefdagrdrgrdgdrgdrgdrgdrgrdgrdgrwdaawdwawdawdwaaddawwad"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message_sent"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time_sent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="4dp"
                    android:text="8:00 am"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="@color/light_grey"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/message_delivery_status_sent"
                    android:layout_width="15dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/ic_outline_watch_later_24"
                    android:backgroundTint="@color/white" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>